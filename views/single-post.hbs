<div class="container">
  <div class="row col-xs-10 col-xs-offset-1">
    <form class="form-horizontal" role="form" id="commentForm">
      <div class="row">
        <div class="form-group">
          <div class="col-xs-12">
            <textarea class="form-control required" style="min-width: 100%" rows="2" id="inputComment" placeholder="Got something to add?"
              maxlength="140"></textarea>
            <label id="charRemaining" for="inputComment">140</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-3">
          <!--Camera-->
          <i class="fa fa-camera-retro fa-lg" aria-hidden="true"></i>
        </div>
        <div class="col-xs-3">
          <!--Video-->
          <i class="fa fa-video-camera fa-lg" aria-hidden="true"></i>
        </div>
        <div class="col-xs-3">
          <i class="fa fa-bar-chart fa-lg" aria-hidden="true"></i>
        </div>
        <div class="col-xs-3">
          <a href="#" data-toggle="popover" data-placement="bottom" data-content="Please enter a comment ...">
            <button type="text" class="btn btn-warning">Comment</button>
          </a>
        </div>
      </div>
    </form>
  </div>
</div>

