<div class="container">
  <ul class="nav nav-tabs nav-justified" role="tablist">
    <li>
      <a class="active" data-toggle="tab" href="#login">Login in to your account</a>
    </li>
    <li>
      <a data-toggle="tab" href="#register">Register an account</a>
    </li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane fade in active" id="login">
      <form class="form-horizontal" role="form" id="log-form">
        <div class="form-group mt">
          <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
              <label for="inputUsername" class="control-label">Username:</label>
            </div>
            <div class="col-sm-9">
              <input type="text" class="form-control input-lg required" id="loginUsername" placeholder="@username">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
              <label for="inputPassword" class="control-label">Password:</label>
            </div>
            <div class="col-sm-9">
              <input type="password" class="form-control input-lg required" id="loginPassword" placeholder="Password">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row col-sm-offset-2 col-sm-10 mt">
            <button type="submit" class="btn btn-warning btn-lg">Login:</button>
          </div>
        </div>
      </form>
    </div>

    <div class="tab-pane fade" id="register">
      <form class="form-horizontal" role="form" id="reg-form">
        <div class="form-group mt">
          <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
              <label for="inputUsername" class="control-label">Pick a Username:</label>
            </div>
            <div class="col-sm-9">
              <input type="text" class="form-control input-lg required" id="regisUsername" placeholder="@username">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
              <label for="inputPassword" class="control-label">Choose a Password:</label>
            </div>
            <div class="col-sm-9">
              <input type="password" class="form-control input-lg required" id="firstRegisPassword" placeholder="Password">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
              <label for="inputPassword" class="control-label">Re-Enter Your Password:</label>
            </div>
            <div class="col-sm-9">
              <input type="password" class="form-control input-lg required" id="secondRegisPassword" placeholder="Re-Enter Password">
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row col-sm-offset-2 col-sm-10 mt">
            <button type="submit" class="btn btn-warning btn-lg">Create Account</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>